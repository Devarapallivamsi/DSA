def numStuds(books, pages):
    stud = 1
    pagesStud = 0
    for i in books:
        if pagesStud + i <= pages:
            pagesStud += i
        else:
            stud += 1
            pagesStud = i
    return stud


low = max(pagesInBook)
high = sum(pagesInBook)
while low <= high:
    mid = (low + high) // 2
    res = numStuds(pagesInBook, mid)
    if res > studs:
        low = mid + 1
    else:
        high = mid - 1
print(low)

