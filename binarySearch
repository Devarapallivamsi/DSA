def canThePagesBeAllocated(books, pages, studs):
    i = 0
    canBeAllocated = None
    mini = math.inf
    while i + len(books) - studs < len(books):
        mini = min(mini, sum(books[i: i + (len(books) - studs) + 1]))
        if mini == pages:
            canBeAllocated = True
            break
        i += 1
    if canBeAllocated is None:
        canBeAllocated = False
    return [canBeAllocated, mini >= pages]


